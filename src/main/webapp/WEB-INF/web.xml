<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControlJson</servlet-name>
        <servlet-class>net.daw.control.JsonControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlJsp</servlet-name>
        <servlet-class>net.daw.control.JspControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadHandler</servlet-name>
        <servlet-class>net.daw.control.FileUploadHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subirPortada</servlet-name>
        <servlet-class>net.daw.imagenes.subir1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subir</servlet-name>
        <servlet-class>net.daw.imagenes.subir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlJson</servlet-name>
        <url-pattern>/json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlJsp</servlet-name>
        <url-pattern>/jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadHandler</servlet-name>
        <url-pattern>/FileUploadHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subir</servlet-name>
        <url-pattern>/subir</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
